{% extends 'base.html.twig' %}

{% block title %}controller_name
{% endblock %}

{% block body %}
	<h1 class="h1 my-4 font-weight-normal">{{controller_name}}</h1>

	<!-- 
		LISTE DE TOUS LES ARTICLES
	-->
	{% for article in articles %}
			<article class="card text-white bg-secondary my-4 p-2 col-lg-8 col-md-10 col-sm-5">
				<div class="card-header">
					<p class="ft-9 text-info text-center">{{article.getTitre()}}</p>
				</div>
				<div class="card-body">
					<p class="h6">
						Publié à
						{{article.getDatePublication.format('H:i')}}
						le
						{{article.getDatePublication.format('d/m/Y')}}</p>
					<div class="mt-5 text-center">
						<a class="btn btn-primary" href="{{path('articles_read', {id: article.id})}}">Lire l'article</a>
					</div>
				</div>
			</article>
	{% endfor %}

	<div class="container">
		<div class="d-flex align-items-center justify-content-center">
			{{ knp_pagination_render(articles) }}
		</div>
	</div>

{% endblock %}
