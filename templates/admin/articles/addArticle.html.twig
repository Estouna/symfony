{% extends 'base.html.twig' %}

{% block title %}Publier un article{% endblock %}

{% block body %}
	<h1 class="h1 my-4 font-weight-normal">{{ controller_name }}</h1>
    <!-- 
		FORMULAIRE PUBLIER UN ARTICLE
	-->
	<section class="container d-flex justify-content-center my-3">
		<div class="row col-lg-8 col-md-10 col-sm-5">
			<div class="col">
				
                {{ form_start(form) }}

				{{ form_row(form.titre) }}
				{{ form_row(form.contenu) }}
                <div class="d-flex flex-column align-items-center">
				    {{ form_row(form.publier) }}
                </div>
				
				{{ form_end(form) }}
			</div>
		</div>
    </section>
{% endblock %}
