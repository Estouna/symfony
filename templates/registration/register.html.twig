{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<h1 class="h1 my-4 font-weight-normal text-center">Inscription</h1>
	<section class="container d-flex justify-content-center my-3">
		<div class="row col-lg-8 col-md-10 col-sm-5">
			<div class="col">
				{{ form_start(registrationForm) }}

				{{ form_row(registrationForm.pseudo) }}
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
				{{ form_row(registrationForm.RGPDConsent) }}
				<div class="d-flex flex-column align-items-center">
				<button type="submit" class="btn btn-lg btn-primary mt-4">M'inscrire</button>
				<a href="{{ path('app_login') }}" class="mt-2">Me connecter</a>
				</div>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>
{% endblock %}

