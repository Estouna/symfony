{% extends 'base.html.twig' %}

{% block title %}controller_name{% endblock %}

{% block body %}
	<h1 class="h1 my-4 font-weight-normal text-center">{{controller_name}}</h1>
    <div>
		<a href="{{ path('users_index') }}" class="mt-2 btn text-primary">Retour</a>
	</div>
	<section class="container d-flex justify-content-center my-3">
		<div class="row col-lg-8 col-md-10 col-sm-5">
			<div class="col">
				{{ form_start(form) }}

				{{ form_row(form.pseudo) }}
				{{ form_row(form.email) }}
				<div class="d-flex flex-column align-items-center">
					{{ form_row(form.modifier) }}
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</section>
{% endblock %}